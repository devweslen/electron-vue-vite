{
  "name": "electron-vue-vite",
  "version": "0.0.0",
  "author": "Luciano Weslen",
  "main": "dist/main/app.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "electron": "wait-on tcp:3000 && cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn electron\"",
    "electron:builder": "electron-builder",
    "build:for:electron": "vue-tsc --noEmit && cross-env ELECTRON=true vite build && tsc -p tsconfig.electron.json",
    "app:build": "yarn build:for:electron && yarn electron:builder"
  },
  "dependencies": {
    "vue": "^3.2.25"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^2.0.0",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron": "^16.0.8",
    "electron-builder": "^22.14.5",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "vite": "^2.7.2",
    "vue-tsc": "^0.29.8",
    "wait-on": "^6.0.0"
  },
  "build": {
    "appId": "com.electron-vue-vite.app",
    "productName": "ElectronVueVite",
    "copyright": "Copyright Â© 2021 Luciano Weslen",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/main/**/*",
      "dist/render/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist/release"
    }
  }
}